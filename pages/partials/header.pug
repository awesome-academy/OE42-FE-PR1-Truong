header.common-header
    section.top-header.py-2
        .menu.px-0.px-md-5
            .d-none.d-md-flex
                for menu, index in menues 
                    a(href=menu.link)= menu.name
                    if index !== menues.length - 1
                        div.mx-2 -
            .d-block.d-md-none 
                i.fa.fa-bars.mx-3(
                    id="topMenuButton"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                )
                .dropdown-menu.top-menu-dropdown(aria-labelledby='topMenuButton')
                    for menu in menues
                        a.dropdown-item(href=menu.link)= menu.name
        .search-bar.px-0.px-md-5.mx-3.mx-md-0
            input(type="text" placeholder="Tìm kiếm ở đây ...")
            i.fa.fa-search
    section.bottom-header
        .container 
            .row 
                .logo.col-2.d-none.d-lg-block
                    img(src="./../assets/images/my-logo.png" alt="")
                .dropdown.menu.col-12.col-lg-10.d-none.d-md-flex
                    .dropdown-menu(aria-labelledby="dropdownMenuButton")
                        .row 
                            .col-12.col-lg-8
                                .row
                                    for wine in redWineData
                                        .col-4 
                                            .title= wine.title
                                            for item in wine.data
                                                .item= item
                            .col-12.col-md-4.d-none.d-lg-block
                                img(src="./../assets/images/Depositphotos_3010981_original1.jpg" alt="")
                    for menu in bottomMenues
                        if menu.active
                            button#dropdownMenuButton.active(data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")= menu.name
                        else
                            button= menu.name
                .d-block.d-md-none 
                    i.fa.fa-bars(
                        id="bottomMenuButton"
                        data-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false"
                    )
                    .dropdown-menu.bottom-menu-dropdown(aria-labelledby='bottomMenuButton')
                        for menu in bottomMenues
                            a.dropdown-item(href=menu.link)= menu.name