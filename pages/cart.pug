extend layouts/layout

block title
    title Giỏ hàng

block content
    include partials/header
    main#cart.px-2.p-md-0
        +breadcrumb(["Trang chủ", "Sản phẩm", "Giỏ hàng"])
        +titleWithArrow("GIỎ HÀNG")
        .table-responsive
            table.table.table-bordered
                thead 
                    tr 
                        for hd in cartTableHeaders
                            th(scope="col")= hd.name
                        th(scope="col") Sửa
                        th(scope="col") Xóa
                tbody
        .cart-action.d-block.d-sm-flex
            +buttonText("TIẾP TỤC MUA HÀNG")
            +buttonText("XÓA")
            +buttonText("CẬP NHẬT")
    include partials/footer
    .toast-container.position-fixed.top-0.end-0.p-3

block module 
    script(type="module" src="./js/vars.js")
    script(type="module" src="./js/mixin.js")
    script(type="module" src="./js/apis.js")
    script(type="module" src="./js/cart.js")
